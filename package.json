{
  "name": "@verana-labs/verre",
  "version": "0.1.0",
  "type": "module",
  "main": "./build/cjs/index.js",
  "module": "./build/index.js",
  "exports": {
    "require": "./build/cjs/index.js",
    "import": "./build/index.js"
  },
  "types": "./build/index.d.ts",
  "files": [
    "build"
  ],
  "packageManager": "pnpm@9.15.3",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/verana-labs/verre"
  },
  "scripts": {
    "build": "pnpm run clean && pnpm run compile",
    "clean": "rimraf -rf ./build",
    "compile": "pnpm run compile:esm && pnpm run compile:cjs",
    "compile:esm": "tsc -p tsconfig.json",
    "compile:cjs": "tsc -p tsconfig.cjs.json",
    "prepublishOnly": "pnpm run build",
    "check-types": "eslint \"{src,tests}/**/*.ts\"",
    "format": "prettier \"src/**/*.ts\" --write",
    "check-format": "prettier -c \"src/**/*.ts\"",
    "test": "vitest --dir tests/unit",
    "test:integration": "vitest run --dir tests/integration",
    "test:watch": "vitest --watch --dir tests/unit",
    "test:coverage": "vitest --coverage --dir tests/unit",
    "lint": "eslint \"{src,tests}/**/*.ts\" --fix",
    "validate": "pnpm run check-types && pnpm run check-format",
    "prepare": "corepack enable"
  },
  "devDependencies": {
    "@credo-ts/askar": "^0.6.1",
    "@credo-ts/core": "^0.6.1",
    "@credo-ts/node": "^0.6.1",
    "@credo-ts/webvh": "^0.6.1",
    "@eslint/js": "^9.22.0",
    "@openwallet-foundation/askar-nodejs": "0.4.3",
    "@types/eslint": "^8.56.2",
    "@types/jsonld": "^1.5.15",
    "@types/node": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "@vitest/coverage-v8": "^3.0.9",
    "conventional-changelog-conventionalcommits": "^7.0.2",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "globals": "^16.0.0",
    "prettier": "^3.2.5",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.6.2",
    "typescript-eslint": "^8.26.1",
    "vitest": "^3.0.9"
  },
  "dependencies": {
    "@digitalcredentials/jsonld": "^9.0.0",
    "@noble/curves": "^2.0.1",
    "@noble/hashes": "^1.8.0",
    "@scure/base": "^2.0.0",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "did-resolver": "^4.1.0",
    "didwebvh-ts": "^2.7.1",
    "jsonld": "^8.3.3",
    "tslog": "^4.10.2",
    "web-did-resolver": "^2.0.29"
  },
  "engines": {
    "node": ">= 18"
  }
}
