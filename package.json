{
  "name": "verre",
  "version": "0.0.1",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/verana-labs/verre"
  },
  "scripts": {
    "build": "yarn run clean && yarn run compile",
    "clean": "rimraf -rf ./build",
    "compile": "tsc -p tsconfig.json",
    "prepublishOnly": "yarn run build",
    "check-types": "yarn check-types:build",
    "check-types:build": "yarn run tsc --noEmit -p tsconfig.json",
    "format": "prettier \"src/**/*.ts\" --write",
    "check-format": "prettier -c \"src/**/*.ts\"",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "lint": "eslint \"{src,apps,libs,tests}/**/*.ts\" --fix",
    "validate": "yarn lint && yarn check-types && yarn check-format"
  },
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@types/eslint": "^8.56.2",
    "@types/node": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "@vitest/coverage-v8": "^3.0.9",
    "conventional-changelog-conventionalcommits": "^7.0.2",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "globals": "^16.0.0",
    "prettier": "^3.2.5",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.6.2",
    "typescript-eslint": "^8.26.1",
    "vitest": "^3.0.9"
  },
  "dependencies": {
    "@transmute/ed25519-signature-2018": "^0.7.0-unstable.82",
    "@transmute/jsonld-document-loader": "^0.7.0-unstable.82",
    "@transmute/verifiable-credentials": "^0.3.4",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "did-resolver": "^4.1.0",
    "web-did-resolver": "^2.0.29"
  },
  "engines": {
    "node": ">= 18"
  },
  "packageManager": "yarn@3.6.1"
}
